@using MySoftCorporation.Code
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>MSC || @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="My Soft Corporation, My Soft, Corporation" name="keywords">
    <meta content="Bootstrap Agency Template" name="description">
    <!-- Favicon -->
    <link href="~/img/favicon.ico" type="image/icon type" rel="icon">
    <!-- CSS Libraries -->
    @Styles.Render("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css")
    @Styles.Render("https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    @Scripts.Render("https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js")
    @Styles.Render("~/Content/lib/slick/slick.css")
    @Styles.Render("~/Content/lib/slick/slick-theme.css")
    @Styles.Render("~/Content/lib/lightbox/css/lightbox.min.css")
    @Styles.Render("~/Content/css/style.css")
</head>
<body>
    <div class="wrapper">
        <!-- Header Start -->
        <div class="header">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-2">
                        <div class="brand">
                            <a href="@Url.Action("Index","Home")">
                                @*<img src="~/img/logo.png" alt="Logo">*@
                            <img src="~/img/MsLogo-192x192.png" height="100" width="100 " alt="Logo" />
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="topbar">
                            <div class="topbar-col">
                                <a href="tel:@Variables.ContactNumber"><i class="fa fa-phone-alt"></i>@Variables.ContactNumber</a>
                            </div>
                            <div class="topbar-col">
                                <a href="mailto:@Variables.Email"><i class="fa fa-envelope"></i>@Variables.Email</a>
                            </div>
                            <div class="topbar-col">
                                <div class="topbar-social">
                                    <a href=""><i class="fab fa-twitter"></i></a>
                                    <a href=""><i class="fab fa-facebook-f"></i></a>
                                    <a href=""><i class="fab fa-youtube"></i></a>
                                    <a href=""><i class="fab fa-instagram"></i></a>
                                    <a href=""><i class="fab fa-linkedin-in"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="navbar navbar-expand-lg bg-light navbar-light">
                            <a href="#" class="navbar-brand">MENU</a>
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                                <div class="navbar-nav">
                                    <a href="@Url.Action("Index","Home")" class="nav-item nav-link"><i class="fas fa-home"></i> Home</a>
                                    <a href="@Url.Action("About","Home")" class="nav-item nav-link"><i class="far fa-address-card"></i> About</a>
                                    <a href="@Url.Action("Index","Course", new { Area = "" })" class="nav-item nav-link"><i class="fas fa-university"></i> Courses</a>
                                    <a href="@Url.Action("Index","Services")" class="nav-item nav-link"><i class="fab fa-servicestack"></i> Services</a>
                                    <a href="@Url.Action("Index","Portfolio")" class="nav-item nav-link"><i class="fas fa-user-tag"></i> Portfolio</a>
                                    <a href="@Url.Action("Index","Blog")" class="nav-item nav-link"><i class="fas fa-blog"></i> Blog</a>
                                    <a href="@Url.Action("Contact","Home")" class="nav-item nav-link"><i class="fas fa-blender-phone"></i> Contact</a>
                                    @Html.Partial("_LoginPartial")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
        <div class="container body-content">
            @RenderBody()
        </div>
        <!-- Call to Action Start -->
        @*<div class="call-to-action">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-9">
                            <h2>Get A Free HTML Template</h2>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam sit amet metus sit amet
                            </p>
                        </div>
                        <div class="col-md-3">
                            <a class="btn" href="https://htmlcodex.com/contact">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>*@
        <!-- Call to Action End -->
        <!-- Footer Start -->
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <div class="footer-about">
                            <h2>About Us</h2>
                            <p>
                                Updating Soon
                            </p>
                            <br>
                            <p><i class="fa fa-map-marker-alt"></i>@Variables.Address</p>
                            <p><i class="fa fa-phone-alt"></i>@Variables.ContactNumber</p>
                            <p><i class="fa fa-envelope"></i>@Variables.Address</p>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="footer-link">
                                    <h2>Useful Link</h2>
                                    <a href="@Url.Action("About","Home")">About Us</a>
                                    <a href="">Our Story</a>
                                    <a href="@Url.Action("Services","Services")">Our Services</a>
                                    <a href="@Url.Action("Portfolio","Portfolio")">Our Portfolio</a>
                                    <a href="@Url.Action("Portfolio","Portfolio")">Our Projects</a>
                                    <a href="@Url.Action("Contact","Contact")">Contact Us</a>
                                </div>
                                @Html.Partial("_LoginPartial")
                            </div>
                            <div class="col-md-6">
                                <div class="footer-link">
                                    <h2>Useful Link</h2>
                                    <a href="">Our Clients</a>
                                    <a href="">Clients Review</a>
                                    <a href="">Ongoing Customer</a>
                                    <a href="">Customer Support</a>
                                    <a href="">FAQs</a>
                                    <a href="">Site Map</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container copyright">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; <a href="@Url.Action("Index","Home")">My Soft Corporation</a>, All Right Reserved.</p>
                    </div>
                    <div class="col-md-6">
                        @*<p>Template By <a href="https://htmlcodex.com">HTML Codex</a></p>*@
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
    </div>
    <!-- JavaScript Libraries -->

  
    @Scripts.Render("~/Content/lib/slick/slick.min.js")
    @Scripts.Render("~/Content/lib/isotope/isotope.pkgd.min.js")
    @Scripts.Render("~/Content/lib/lightbox/js/lightbox.min.js")
    @Scripts.Render("~/Content/js/main.js")
    @RenderSection("scripts", required: false)
</body>
</html>

