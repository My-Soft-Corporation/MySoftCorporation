@model MySoft.Institute.Entities.Accounts.FeePayment
@{
    ViewBag.Title = "Fee Payment";
}
@if (Model != null)
{
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Confirm New Transaction</div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Confirm", "FeeDeposit", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="0" />
                    @Html.HiddenFor(x => x.IP)
                    @Html.HiddenFor(x => x.Longitude)
                    @Html.HiddenFor(x => x.Latitude)
                    @Html.HiddenFor(x => x.Agent)
                    @Html.HiddenFor(x => x.AdmissionId)
                    @Html.HiddenFor(x => x.PaymentGatewayId)
                    @Html.ValidationSummary()
                    <div class="form-group row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Amount)
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Amount)
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.TransactionID)
                            @Html.TextBoxFor(model => model.TransactionID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TransactionID)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.DateTime)
                            @Html.TextBoxFor(model => model.DateTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DateTime)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Confirm" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/custom-validator")
    }

}
