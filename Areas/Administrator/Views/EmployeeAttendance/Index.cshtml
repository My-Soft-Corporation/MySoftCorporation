@{
    ViewBag.Title = "Attendance";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <a href="@Url.Action("GiveAttendance","EmployeeAttendance")" class="btn btn-primary"><i class="fa fa-check mr-1"></i> Take/Give</a>
            </div>
        </div>
        <div class="card-body" id="divResponse">
            <button class="btn btn-primary btn-flat" onclick="GetHistory()">Click here to Load History</button>
        </div>
    </div>
</div>
<script>
    function GetHistory() {
        $.get("@Url.Action("GetList", "EmployeeAttendance")", { name: "value" },
            function (data, textStatus, jqXHR) {
                $("#divResponse").html(data);
            }
        );
    }
</script>