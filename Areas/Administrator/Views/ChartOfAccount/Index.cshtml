@model  IEnumerable<MySoft.Accounts.Entities.Models.Accounts.ChartOfAccount>
@{
    ViewBag.Title = "Account Types";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
                <a class="btn btn-primary" href="@Url.Action("Create")" ><i class="fa fa-plus"></i> Add New </a>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div style="overflow-x:auto">
                    <table class="table table-custom table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>@Html.DisplayNameFor(x=>x.AccountType)</td>
                                <td>@Html.DisplayNameFor(x=>x.Title)</td>
                                <td>@Html.DisplayNameFor(x=>x.Code)</td>
                                <td>@Html.DisplayNameFor(x=>x.Debit)</td>
                                <td>@Html.DisplayNameFor(x=>x.Credit)</td>
                                <td>@Html.DisplayNameFor(x=>x.Balance)</td>
                                <td>@Html.DisplayNameFor(x=>x.UserID)</td>
                                <td>@Html.DisplayNameFor(x=>x.ModifiedOn)</td>
                                <td>@Html.DisplayNameFor(x=>x.IP)</td>
                                <td>@Html.DisplayNameFor(x=>x.Agent)</td>
                                <td>@Html.DisplayNameFor(x=>x.Latitude)</td>
                                <td>@Html.DisplayNameFor(x=>x.Longitude)</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0 )
                            {
                                foreach (var item in Model)
                                {
                            <tr>
                                <td>@item.AccountType.Name</td>
                                <td>@item.Title</td>
                                <td>@item.Code</td>
                                <td>@item.Credit</td>
                                <td>@item.Debit</td>
                                <td>@item.Balance</td>
                                <td>@item.User.UserName</td>
                                <td>@item.ModifiedOn</td>
                                <td>@item.IP</td>
                                <td>@item.Agent</td>
                                <td>@item.Latitude</td>
                                <td>@item.Longitude</td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
             
            }
        </div>
    </div>
</div>

