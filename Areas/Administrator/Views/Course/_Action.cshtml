@model MySoft.Institute.Entities.Course
@if (Model != null)
{
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Add New</div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Action", "Course", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    @Html.HiddenFor(x => x.ID)
                    @Html.HiddenFor(x => x.UserID)
                    @Html.HiddenFor(x => x.IP)
                    @Html.HiddenFor(x => x.Agent)
                    @Html.HiddenFor(x => x.Location)      
                    <div class="row form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.CategoryID)
                            @Html.DropDownListFor(x => x.CategoryID, new SelectList(ViewBag.Categories, "ID", "Name"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryID)
                        </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Title)
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.Fee)
                            @Html.TextBoxFor(x => x.Fee, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Fee)
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.Duration)
                            @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Duration)
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.StartTime)
                            @Html.TextBoxFor(x => x.StartTime, "{0:hh:mm}", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.StartTime)
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.EndTime)
                            @Html.TextBoxFor(x => x.EndTime, "{0:hh:mm}", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.EndTime)
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-3">
                            <input type="submit" name="Save" class="btn form-control btn-primary" value="Save" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/custom-validator")
    }
}


