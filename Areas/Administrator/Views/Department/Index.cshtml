@model MySoftCorporation.Areas.Administrator.Models.DepartmentViewModel
@{
    ViewBag.Title = "Department";
}
<div class="col-md-12">
    <div class="card form-group">
        <div class="card-header form-group ">
            <h3 class="card-title">@ViewBag.Title</h3>
        </div>
    </div>

    <div class="card form-group">
        <div class="col-md-12 col-sm-12 col-lg-12" style="
    margin-top: 10px;
">
            <form>
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control" value="@Model.SearchTerm" name="SearchTerm" placeholder="Search @ViewContext.RouteData.Values["controller"].ToString() Here " required>
                    <span class="input-group-append">
                        <button type="submit" class="btn btn-info btn-sm btn-flat"><i class="fa fa-search mr-1"></i> Search</button>
                        <a class="btn btn-primary btn-sm btn-flat " href="@Url.Action("Index","Department")"><i class="fa fa-circle mr-1"></i> Reset</a>
                        <button type="button" data-href="@Url.Action("Action","Department")" class="data-btn btn btn-default" data-toggle="modal" data-target="#actionModal">
                            <i class="fa fa-plus mr-1"></i> Create
                        </button>
                    </span>
                </div>
            </form>
        </div>
        @{Html.RenderPartial("_Listing", Model);}
    </div>

    <!-- /.card-body -->
</div>
<div class="modal fade" id="actionModal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" id="formModal">

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.card -->
<div class="modal fade" id="deleteModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" id="deleteModalContent">
    </div>
</div>
<script>
    $(".data-btn").click(function (e) {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#formModal").html(response);
            });

    });
</script>