@model  IEnumerable<MySoft.Accounts.Entities.Models.Accounts.AccountType>
@{
    ViewBag.Title = "Account Types";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
                <a class="btn btn-primary" href="@Url.Action("Create","AccountType")" ><i class="fa fa-plus"></i> Add New </a>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div style="overflow-x:auto">
                    <table class="table table-custom table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>@Html.DisplayNameFor(x=>x.Name)</td>
                                <td>@Html.DisplayNameFor(x=>x.AddedBy)</td>
                                <td>@Html.DisplayNameFor(x=>x.ModifiedOn)</td>
                                <td>@Html.DisplayNameFor(x=>x.IP)</td>
                                <td>@Html.DisplayNameFor(x=>x.Agent)</td>
                                <td>@Html.DisplayNameFor(x=>x.Latitude)</td>
                                <td>@Html.DisplayNameFor(x=>x.Longitude)</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0 )
                            {
                                foreach (var accountType in Model)
                                {
                            <tr>
                                <td>@accountType.Name</td>
                                <td>@accountType.AddedBy.UserName</td>
                                <td>@accountType.ModifiedOn</td>
                                <td>@accountType.IP</td>
                                <td>@accountType.Agent</td>
                                <td>@accountType.Latitude</td>
                                <td>@accountType.Longitude</td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
             
            }
        </div>
    </div>
</div>

